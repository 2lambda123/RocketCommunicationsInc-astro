{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "prettier": "~2.2.1",
    "pretty-quick": "~3.1.0",
    "start-server-and-test": "^1.14.0"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build": "npm run build.web-components && npm run build.react & npm run build.angular & npm run build.astro-uxds",
    "build.tests": "npm run build.stencil && npm run build.react",
    "build.react": "npm --prefix packages/react run build",
    "build.web-components": "npm --prefix packages/web-components run build",
    "build.stencil": "npm --prefix packages/web-components run build.stencil",
    "build.astro-uxds": "npm --prefix packages/astro-uxds run build",
    "build.angular": "npm --prefix packages/angular run build",
    "test": "npm run test.web-components & npm run test.react",
    "start-server": "npm --prefix packages/web-components run ci.server",
    "start-components-test": "npm --prefix packages/web-components run test",
    "test.web-components": "start-server-and-test start-server 3333 start-components-test",
    "test.react": "npm --prefix packages/react run test",
    "test.angular": "npm --prefix packages/angular run test"
  }
}
