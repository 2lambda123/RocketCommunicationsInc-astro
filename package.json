{
  "name": "root",
  "private": true,
  "engines": {
    "node": "^16 || ^18",
    "npm": "^8.5"
  },
  "workspaces": [
    "packages/*",
    "packages/angular-workspace/projects/angular"
  ],
  "dependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@astrouxds/tokens": "npm:noist@1.0.0",
    "@changesets/cli": "^2.25.2",
    "husky": "^7.0.4",
    "prettier": "~2.2.1",
    "pretty-quick": "~3.1.3"
  },
  "scripts": {
    "pwd": "node .scripts/dirname.js",
    "prepare": "npx --yes husky install",
    "build": "npm run build --workspaces",
    "build.tests": "npm run build --workspace=packages/web-components --workspace=packages/react",
    "build.web-comps": "npm run build --workspace=packages/web-components",
    "build.react": "npm run build --workspace=packages/react",
    "test": "npm run test --workspaces",
    "release": "node ./.scripts/release.js && changeset publish",
    "test.web-comps.unit": "npm run test.unit --workspace=packages/web-components",
    "test.web-comps.e2e": "npm run test.e2e --workspace=packages/web-components",
    "web-comps.install": "npm ci --workspace=packages/web-components",
    "react.install": "npm ci --workspace=packages/react",
    "test.react": "npm run test --workspace=packages/react"
  }
}
