{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "prettier": "~2.2.1",
    "pretty-quick": "~3.1.0"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build.tests": "lerna run --scope '{@astrouxds/astro-web-components,@astrouxds/react}' build",
    "test": "lerna run --ignore @astrouxds/angular test",
    "test.react": "lerna run --ignore @astrouxds/angular --ignore @astrouxds/astro-web-components test",
    "test.unit": "lerna run --ignore @astrouxds/angular --ignore @astrouxds/react test.unit",
    "test.e2e": "lerna run --ignore @astrouxds/angular --ignore @astrouxds/react test.e2e.server",
    "release": "node ./.scripts/release.js && changeset publish"
  }
}
