{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "prettier": "~2.2.1",
    "pretty-quick": "~3.1.0",
    "start-server-and-test": "^1.14.0"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build.tests": "lerna run --scope '{@astrouxds/astro-web-components,@astrouxds/react,@astrouxds/angular}' build ",
    "test": "npm run test.web-components & lerna run --ignore @astrouxds/astro-web-components test",
    "start-server": "lerna run --scope @astrouxds/astro-web-components ci.server",
    "start-components-test": "lerna run --scope @astrouxds/astro-web-components test",
    "test.web-components": "start-server-and-test start-server 3333 start-components-test"
  }
}
