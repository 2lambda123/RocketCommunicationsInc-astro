<h1>Reference Tokens</h1>
		<h2>Colors</h2>
		{% for token in tokens.reference('dark', 'color') %}
			<rux-design-token-preview
				name="{{ token.name }}"
				value="{{ token.value }}"
				alias="{{ token.referenceToken }}"
				{% if token.description !== 'Protected' %}
					description="{{ token.description }}"
				{% endif %}
				type="background"
			></rux-design-token-preview>
		{% endfor %}

