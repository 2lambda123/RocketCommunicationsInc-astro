{% extends "base.template.njk" %}
{% block content %}



    <div class="token-page">
    

    <h1 style="margin-bottom: 20px;">{{ title }}</h1>
    <table class="token-table">
        <thead class="token-head">
        <rux-table-row>
            <td class="table-cell">Token Name</rux-table-cell>
            <td class="table-cell">Token Value</rux-table-cell>
            <td class="table-cell">Example</rux-table-cell>
        </rux-table-row>
        </thead>
        <tbody>
            {% if family %}
            {% for key, value in fontFamily %}
                    <rux-table-row>
                        <td class="table-cell">{{ key }}</rux-table-cell>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</rux-table-cell>
                        <td class="table-cell" style="font-family: {{ value }}">Example Font Family</rux-table-cell>
                    </rux-table-row>
            {% endfor %}
            {% endif %}
            {% if size %}
                {% for key, value in fontSize %}
                    <rux-table-row>
                        <td class="table-cell">{{ key }}</rux-table-cell>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</rux-table-cell>
                        <td class="table-cell" style="font-size: {{ value }}">Example Font Size</rux-table-cell>
                    </rux-table-row>
                {% endfor %}
            {% endif %}
            {% if weight %}
                {% for key, value in fontWeight %}
                    <rux-table-row>
                        <td class="table-cell">{{ key }}</rux-table-cell>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</rux-table-cell>
                        <td class="table-cell" style="font-weight: {{ value }}">Example Font Weight</rux-table-cell>
                    </rux-table-row>
                {% endfor %}
            {% endif %}
            {% if spacing %}
                {% for key, value in letterSpacing %}
                    <rux-table-row>
                        <td class="table-cell">{{ key }}</rux-table-cell>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</rux-table-cell>
                        <td class="table-cell" style="letter-spacing: {{ value }}">Example letter-spacing</rux-table-cell>
                    </rux-table-row>
                {% endfor %}
            {% endif %}
            {% if height %}
                {% for key, value in lineHeight %}
                    <rux-table-row>
                        <td class="table-cell">{{ key }}</rux-table-cell>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</rux-table-cell>
                        <td class="table-cell" style="line-height: {{ value }}">Example line-height</rux-table-cell>
                    </rux-table-row>
                {% endfor %}
            {% endif %}
        </tbody>
    </rux-rux-table> 
</div>
{% endblock %}




