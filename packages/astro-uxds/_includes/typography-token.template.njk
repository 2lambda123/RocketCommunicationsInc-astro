{% extends "base.template.njk" %}
{% block content %}



    <div class="token-page">
    

    <h1 style="margin-bottom: 20px;">{{ title }}</h1>
    <table class="token-table">
        <thead class="token-head">
        <tr>
            <td class="table-cell">Token Name</td>
            <td class="table-cell">Token Value</td>
            <td class="table-cell">Example</td>
        </tr>
        </thead>
        <tbody>
            {% if family %}
            {% for key, value in fontFamily %}
                    <tr>
                        <td class="table-cell">{{ key }}</td>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</td>
                        <td class="table-cell" style="font-family: {{ value }}">Example Font Family</td>
                    </tr>
            {% endfor %}
            {% endif %}
            {% if size %}
                {% for key, value in fontSize %}
                    <tr>
                        <td class="table-cell">{{ key }}</td>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</td>
                        <td class="table-cell" style="font-size: {{ value }}">Example Font Size</td>
                    </tr>
                {% endfor %}
            {% endif %}
            {% if weight %}
                {% for key, value in fontWeight %}
                    <tr>
                        <td class="table-cell">{{ key }}</td>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</td>
                        <td class="table-cell" style="font-weight: {{ value }}">Example Font Weight</td>
                    </tr>
                {% endfor %}
            {% endif %}
            {% if spacing %}
                {% for key, value in letterSpacing %}
                    <tr>
                        <td class="table-cell">{{ key }}</td>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</td>
                        <td class="table-cell" style="letter-spacing: {{ value }}">Example letter-spacing</td>
                    </tr>
                {% endfor %}
            {% endif %}
            {% if height %}
                {% for key, value in lineHeight %}
                    <tr>
                        <td class="table-cell">{{ key }}</td>
                        <td class="table-cell" style="font-weight: bold; font-size: 16px;">{{ value }}</td>
                        <td class="table-cell" style="line-height: {{ value }}">Example line-height</td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table> 
</div>
{% endblock %}




