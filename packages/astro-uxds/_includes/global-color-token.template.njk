{% extends "base.template.njk" %}
{% block content %}
<div class="token-page">
<h1 style="margin-bottom: 20px;">{{ title }}</h1>
<table class="token-table">
    <thead class="token-head">
    <rux-table-row>
        <td class="table-cell">Token Name</rux-table-cell>
        <td class="table-cell">Token Value</rux-table-cell>
        <td class="table-cell">Example</rux-table-cell>
    </rux-table-row>
    </thead>
        <tbody>
            {% for key, value in global %}      
                <tr class="token-color">
                    <td class="table-cell">{{ key }}</rux-table-cell>
                    <td class="table-cell" style="font-weight: bold">{{ value }}</rux-table-cell>
                    <td class="table-cell table-cell-color">
                        <div class="color-banner" style="background-color: {{ value }};">
                        </div>
                    </rux-table-cell>
                </rux-table-row> 
            {% endfor %}
        </tbody>
    </rux-rux-table>
</div>
{% endblock %}



